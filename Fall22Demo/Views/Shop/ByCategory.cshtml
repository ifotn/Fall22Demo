<section class="row card-group">
    @foreach (var p in Model)
    {
        <!--css from https://stackoverflow.com/questions/36430816/bootstrap-4-card-deck-with-number-of-columns-based-on-viewport?noredirect=1&lq=1-->
        <div class="col-sm-6 col-lg-4 mb-3">
            <div class="card mb-4 text-center h-100">
                <div class="card-body">
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@p.ProductId" class="h5">@p.Name</a>
                    <h6>@String.Format("{0:c}", p.Price)</h6>
                    <img src="~/img/product-images/@p.Photo" alt="Product Image" class="thumb" />
                    <form method="post" action="/Shop/AddToCart">
                        <input type="hidden" name="ProductId" value="@p.ProductId" />
                        <fieldset class="form-group">
                            <label class="control-label" for="Quantity">Quantity: </label>
                            <input type="number" id="Quantity" name="Quantity" required min="1" max="99999" class="input-small" />
                        </fieldset>
                        <button class="btn btn-primary">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    }
    •
</section>
