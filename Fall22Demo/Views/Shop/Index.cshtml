@model IEnumerable<Fall22Demo.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<section>
    <div class="row">
        @foreach (var c in Model)
        {
            <!--css from https://stackoverflow.com/questions/36430816/bootstrap-4-card-deck-with-number-of-columns-based-on-viewport?noredirect=1&lq=1-->
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <a asp-controller="Shop" asp-action="ByCategory" asp-route-category="@c.Name">@c.Name</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
